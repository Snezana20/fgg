<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Поле результата -->
    <TextView
        android:id="@+id/resultField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Результат"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/operationField"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Поле знака операции -->
    <TextView
        android:id="@+id/operationField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resultField"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Поле ввода чисел -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:gravity="end|center_vertical"
        android:inputType="numberDecimal"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/resultField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Таблица кнопок -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Первый ряд кнопок -->
        <TableRow>
            <Button
                android:id="@+id/buClear"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="AC"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/buPlusMinus"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="+/-"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/buPercent"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="%"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/buDelete"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="DEL"
                android:textColor="#FFFFFF" />
        </TableRow>

        <!-- Второй ряд кнопок -->
        <TableRow>
            <Button
                android:id="@+id/bu7"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="7"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/bu8"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="8"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/bu9"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="9"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/buMul"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#FFA500"
                android:text="*"
                android:textColor="#FFFFFF" />
        </TableRow>

        <!-- Третий ряд кнопок -->
        <TableRow>
            <Button
                android:id="@+id/bu4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="4"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/bu5"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="5"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/bu6"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="6"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/buDiv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#FFA500"
                android:text="/"
                android:textColor="#FFFFFF" />
        </TableRow>

        <!-- Четвертый ряд кнопок -->
        <TableRow>
            <Button
                android:id="@+id/bu1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="1"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/bu2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="2"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/bu3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="3"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/buMinus"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#FFA500"
                android:text="-"
                android:textColor="#FFFFFF" />
        </TableRow>

        <!-- Пятый ряд кнопок -->
        <TableRow>
            <Button
                android:id="@+id/bu0"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="0"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/buDot"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="."
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/buPlus"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:backgroundTint="#FFA500"
                android:text="+"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow>
        <Button
            android:id="@+id/buEqual"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:backgroundTint="#FFA500"
            android:text="="
            android:textColor="#FFFFFF" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>